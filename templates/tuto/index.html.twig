{% extends 'base.html.twig' %}

{% block title %}Tuto index{% endblock %}

{% block body %}
    <h1>Tuto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Categories</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tuto in tutos %}
            <tr>
                <td>{{ tuto.Title }}</td>
                <td>{{ tuto.Categories ? tuto.Categories|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('app_tuto_show', {'id': tuto.id}) }}">Voir</a>
                    <a href="{{ path('app_tuto_edit', {'id': tuto.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun tuto en ligne</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tuto_new') }}">Ajouter un nouveau tutoriel</a>
{% endblock %}
