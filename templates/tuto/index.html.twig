{% extends 'base.html.twig' %}

{% block title %}Tuto index{% endblock %}

{% block body %}
    <h1>Tuto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Categories</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tuto in tutos %}
            <tr>
                <td>{{ tuto.Title }}</td>
                <td>{{ tuto.Categories ? tuto.Categories|join(', ') : '' }}</td>
                <td><img src="{{ asset('uploads/' ~ tuto.image) }}" width="300" height="300" /></td>
                <td>
                    <a href="{{ path('app_tuto_show', {'id': tuto.id}) }}">show</a>
                    <a href="{{ path('app_tuto_edit', {'id': tuto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tuto_new') }}">Create new</a>
{% endblock %}
